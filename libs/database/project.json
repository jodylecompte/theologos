{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/database/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:data"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/database",
        "main": "libs/database/src/index.ts",
        "tsConfig": "libs/database/tsconfig.lib.json",
        "assets": ["libs/database/*.md"]
      }
    },
    "prisma:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate --schema libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate dev --schema libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:migrate:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate deploy --schema libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:migrate:reset": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate reset --schema libs/database/prisma/schema.prisma --force",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -r @swc-node/register libs/database/prisma/seed.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma studio --schema libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma db push --schema libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
